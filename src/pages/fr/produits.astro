---
import BaseLayout from "../../layouts/BaseLayout.astro";
import SectionWrapper from "../../components/SectionWrapper.astro";
import fr from "../../i18n/fr.json";

const { title, subtitle, hero_image, features } = fr.section_pages.products;
---

<BaseLayout title={`${title} | Ignia Cloud`} description={subtitle}>
  <SectionWrapper title={title} subtitle={subtitle} hero_image={hero_image}>
    <div class="features-grid grid grid-cols-1 md:grid-cols-2 gap-8 mt-12">
      {
        features && features.length > 0 ? (
          features.map((feature) => (
            <div class="feature-card p-6 border rounded-lg shadow-md">
              <h3 class="text-2xl font-bold mb-2">{feature.title}</h3>
              <p>{feature.description}</p>
            </div>
          ))
        ) : (
          <p>
            Aucune fonctionnalité à afficher pour cette section pour le moment.
          </p>
        )
      }
    </div>
  </SectionWrapper>
</BaseLayout>
