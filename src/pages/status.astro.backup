        <div class="space-y-6 font-mono text-xs">
          {logs.map((service, index) => (
            <div class="border-t border-slate-700 pt-4" class:list={[index === 0 && 'border-t-0 pt-0']}>
              <p class="text-red-400 font-bold mb-2">
