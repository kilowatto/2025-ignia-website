/**
 * /status - P√°gina de Estado del Sistema (System Status)
 * 
 * Prop√≥sito:
 * Monitoreo en tiempo real de los servicios cr√≠ticos de Ignia Cloud.
 * Provee visibilidad inmediata del estado operacional de la infraestructura.
 * 
 * Servicios Monitoreados:
 * 1. Website - Self-check del sitio web principal
 * 2. Odoo API - Verificaci√≥n de conectividad y autenticaci√≥n con Odoo SaaS
 * 
 * Sistema de Sem√°foros (Traffic Light):
 * üü¢ Operational - Servicio funcionando correctamente
 * üü° Degraded - Servicio con problemas de rendimiento
 * üî¥ Down - Servicio no disponible
 * 
 * Caracter√≠sticas:
 * - Server-side rendering (SSR) para checks en cada page load
 * - Response time tracking (milisegundos)
 * - Error logging con stack traces
 * - Logs protegidos por token (?token=SECRET)
 * - Export a JSON para debugging
 * - Copy to clipboard para logs
 * - BaseLayout para SEO/GEO completo
 * - Accesibilidad WCAG 2.2 AA
 * - Internacionalizaci√≥n (EN/ES/FR)
 * 
 * Arquitectura de Checks:
 * - Website: Siempre operacional (self-check)
 * - Odoo API: XML-RPC authentication con timeout de 5 segundos
 * 
 * Seguridad:
 * - Logs sensibles protegidos por STATUS_PAGE_TOKEN
 * - Sanitizaci√≥n de datos sensibles (passwords ocultos)
 * - Stack traces solo visibles con autenticaci√≥n
 * 
 * Performance:
 * - Timeouts configurables por servicio
 * - Minimal JS (solo para copy/export)
 * - Tailwind CSS para estilos
 * 
 * Variables de Entorno:
 * - STATUS_PAGE_TOKEN: Token para ver logs sensibles
 * - ODOO_URL: URL del servidor Odoo
 * - ODOO_DB: Nombre de la base de datos
 * - ODOO_USERNAME: Usuario para autenticaci√≥n
 * - ODOO_PASSWORD: Password/API key (nunca expuesto en frontend)
 * 
 * Uso:
 * - P√∫blico: /status (sin logs sensibles)
 * - Protegido: /status?token=SECRET (con logs completos)
 * 
 * Cumplimiento arquitectura.md:
 * - ¬ß2: BaseLayout para herencia SEO/GEO
 * - ¬ß5: i18n con astro-i18n (funci√≥n t())
 * - ¬ß12: Accesibilidad WCAG 2.2 AA
 * - ¬ß14: Performance (minimal JS, Tailwind CSS)
 * 
 * @see src/lib/odoo/OdooClient.ts - Cliente XML-RPC para Odoo
 * @see src/lib/odoo/config.ts - Configuraci√≥n y validaci√≥n de Odoo
 * @see src/layouts/BaseLayout.astro - Layout base con SEO/GEO
 * @see README.md - Documentaci√≥n completa del sistema de monitoreo
 */

import BaseLayout from '../layouts/BaseLayout.astro';
import { t } from 'astro-i18n';
import { OdooClient } from '../lib/odoo/OdooClient';
import { getOdooConfig, validateOdooConfig } from '../lib/odoo/config';

// Obtener locale actual (i18n h√≠brido: Astro nativo + astro-i18n)
const rawLocale = Astro.currentLocale || 'en';
const locale = rawLocale.split('-')[0] as 'en' | 'es' | 'fr';

// Tipos para el estado de los servicios
interface ServiceStatus {
  status: 'operational' | 'degraded' | 'down';
  responseTime?: number;
  error?: {
    message: string;
    code?: string;
    stack?: string;
  };
  uid?: number;
}

interface SystemStatus {
  timestamp: string;
  services: {
    website: ServiceStatus;
    odooApi: ServiceStatus;
  };
}

// ==========================================
// 1. WEBSITE CHECK
// ==========================================
// Self-check del sitio web (siempre operacional)
const websiteStart = Date.now();
const websiteService: ServiceStatus = {
  status: 'operational',
  responseTime: Date.now() - websiteStart,
};

// ==========================================
// 2. ODOO API CHECK
// ==========================================
// Verifica conectividad y autenticaci√≥n con Odoo SaaS
const odooStart = Date.now();
let odooService: ServiceStatus = {
  status: 'down',
  error: {
    message: 'No se pudo verificar el servicio',
    code: 'UNKNOWN',
  },
};

try {
  // Validar configuraci√≥n de Odoo
  const validation = validateOdooConfig();
  if (!validation.valid) {
    throw new Error(validation.error || 'Configuraci√≥n de Odoo inv√°lida');
  }

  // Obtener configuraci√≥n
  const config = getOdooConfig();
  
  // Crear cliente con timeout de 5 segundos
  const client = new OdooClient(config, 5000);
  
  // Intentar autenticaci√≥n
  const auth = await client.authenticate();
  
  // Si llegamos aqu√≠, la autenticaci√≥n fue exitosa
  odooService = {
    status: 'operational',
    responseTime: Date.now() - odooStart,
    uid: auth.uid,
  };
} catch (error) {
  // Capturar cualquier error en la autenticaci√≥n
  odooService = {
    status: 'down',
    responseTime: Date.now() - odooStart,
    error: {
      message: (error as Error).message,
      code: (error as any)?.code || 'CONNECTION_ERROR',
      stack: (error as Error).stack,
    },
  };
}

// ==========================================
// 3. SYSTEM STATUS
// ==========================================
// Consolidar estado de todos los servicios
const systemStatus: SystemStatus = {
  timestamp: new Date().toISOString(),
  services: {
    website: websiteService,
    odooApi: odooService,
  },
};

// ==========================================
// 4. TOKEN AUTHENTICATION
// ==========================================
// Verificar si el usuario tiene permiso para ver logs sensibles
const url = new URL(Astro.request.url);
const token = url.searchParams.get('token');
const expectedToken = import.meta.env.STATUS_PAGE_TOKEN || 'dev123';
const isAuthenticated = token === expectedToken;

// ==========================================
// 5. HELPER FUNCTIONS
// ==========================================
/**
 * Obtiene el emoji de sem√°foro seg√∫n el estado del servicio
 */
function getStatusIcon(status: ServiceStatus['status']): string {
  switch (status) {
    case 'operational':
      return 'üü¢';
    case 'degraded':
      return 'üü°';
    case 'down':
      return 'üî¥';
    default:
      return '‚ö™';
  }
}

/**
 * Obtiene el texto legible del estado (i18n)
 */
function getStatusText(status: ServiceStatus['status']): string {
  return t(`status.status.${status}`, undefined, { locale });
}

/**
 * Obtiene las clases de Tailwind CSS para el badge de estado
 */
function getStatusBadgeClasses(status: ServiceStatus['status']): string {
  const baseClasses = 'inline-flex items-center px-3 py-1 rounded-full text-sm font-medium';
  
  switch (status) {
    case 'operational':
      return `${baseClasses} bg-green-100 text-green-800`;
    case 'degraded':
      return `${baseClasses} bg-yellow-100 text-yellow-800`;
    case 'down':
      return `${baseClasses} bg-red-100 text-red-800`;
    default:
      return `${baseClasses} bg-gray-100 text-gray-800`;
  }
}

/**
 * Sanitiza datos sensibles para logging seguro
 */
function sanitizeForLogging(obj: any): any {
  if (typeof obj !== 'object' || obj === null) return obj;
  
  const sanitized = Array.isArray(obj) ? [] : {};
  
  for (const [key, value] of Object.entries(obj)) {
    // Ocultar passwords y tokens
    if (key.toLowerCase().includes('password') || key.toLowerCase().includes('token')) {
      (sanitized as any)[key] = '***REDACTED***';
    } else if (typeof value === 'object' && value !== null) {
      (sanitized as any)[key] = sanitizeForLogging(value);
    } else {
      (sanitized as any)[key] = value;
    }
  }
  
  return sanitized;
}

// ==========================================
// 6. SEO & STRUCTURED DATA
// ==========================================
// Metadatos para BaseLayout (i18n)
const pageTitle = t('status.meta.title', undefined, { locale });
const pageDescription = t('status.meta.description', undefined, { locale });

// JSON-LD para WebPage
const structuredData = [
  {
    '@context': 'https://schema.org',
    '@type': 'WebPage',
    name: pageTitle,
    description: pageDescription,
    url: Astro.url.href,
    inLanguage: locale,
    isPartOf: {
      '@type': 'WebSite',
      name: 'Ignia Cloud',
      url: Astro.url.origin,
    },
  },
];
