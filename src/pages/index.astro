---
/**
 * Home Page - English (Default)
 * Main landing page with 12 sections
 * Architecture: SSG, zero blocking JS, WCAG 2.2 AA
 */

import BaseLayout from "../layouts/BaseLayout.astro";
import HeroSection from "../components/home/HeroSection.astro";
import TrustBar from "../components/home/TrustBar.astro";
import WhyIgniaGrid from "../components/home/WhyIgniaGrid.astro";
import PricingCTA from "../components/home/PricingCTA.astro";
import SolutionsCards from "../components/home/SolutionsCards.astro";
import ProductsGrid from "../components/home/ProductsGrid.astro";
import MulticloudDiagram from "../components/home/MulticloudDiagram.astro";
import AICards from "../components/home/AICards.astro";
import UseCasesTabs from "../components/home/UseCasesTabs.astro";
import SLABlock from "../components/home/SLABlock.astro";
import ComplianceBlock from "../components/home/ComplianceBlock.astro";
import TestimonialsCarousel from "../components/home/TestimonialsCarousel.astro";
import FinalCTA from "../components/home/FinalCTA.astro";

const locale = "en";

// JSON-LD Structured Data
const jsonLdOrganization = {
  "@context": "https://schema.org",
  "@type": "Organization",
  name: "Ignia Cloud",
  url: "https://ignia.cloud",
  logo: "https://ignia.cloud/Ignia-blanco.svg",
  description:
    "Enterprise cloud with transparent pricing and 24/7 human support",
  contactPoint: {
    "@type": "ContactPoint",
    telephone: "+1-XXX-XXX-XXXX",
    contactType: "Customer Support",
    availableLanguage: ["English", "Spanish", "French"],
    areaServed: "Worldwide",
  },
  sameAs: [
    "https://www.linkedin.com/company/ignia-cloud",
    "https://twitter.com/igniacloud",
    "https://github.com/igniacloud",
  ],
};

const jsonLdService = {
  "@context": "https://schema.org",
  "@type": "Service",
  serviceType: "Cloud Computing",
  provider: {
    "@type": "Organization",
    name: "Ignia Cloud",
  },
  areaServed: "Worldwide",
  hasOfferCatalog: {
    "@type": "OfferCatalog",
    name: "Cloud Services",
    itemListElement: [
      {
        "@type": "Offer",
        itemOffered: {
          "@type": "Service",
          name: "Virtual Machines",
          description: "Scalable VMs with flexible configurations",
        },
      },
      {
        "@type": "Offer",
        itemOffered: {
          "@type": "Service",
          name: "Kubernetes",
          description: "Managed Kubernetes clusters",
        },
      },
      {
        "@type": "Offer",
        itemOffered: {
          "@type": "Service",
          name: "Object Storage",
          description: "S3-compatible object storage",
        },
      },
    ],
  },
};

const jsonLdFAQ = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  mainEntity: [
    {
      "@type": "Question",
      name: "What makes Ignia Cloud different?",
      acceptedAnswer: {
        "@type": "Answer",
        text: "Transparent pricing with no hidden costs, 24/7 human support, enterprise-ready infrastructure with ISO 27001, SOC 2, PCI DSS, and GDPR compliance.",
      },
    },
    {
      "@type": "Question",
      name: "What services does Ignia Cloud offer?",
      acceptedAnswer: {
        "@type": "Answer",
        text: "We offer VMs, Kubernetes, Object Storage, Networking, Backup & DR, Security, and Monitoring solutions.",
      },
    },
    {
      "@type": "Question",
      name: "What is the SLA guarantee?",
      acceptedAnswer: {
        "@type": "Answer",
        text: "We guarantee 99.99% uptime with 24/7 monitoring, proactive alerting, and dedicated account managers for enterprise clients.",
      },
    },
  ],
};
---

<BaseLayout
  title="Home | Ignia Cloud"
  description="Enterprise cloud with transparent pricing and 24/7 human support. VMs, Kubernetes, Storage, AI/ML, and multi-cloud solutions with ISO 27001, SOC 2, PCI DSS, and GDPR compliance."
>
  <!-- JSON-LD Structured Data -->
  <script
    type="application/ld+json"
    set:html={JSON.stringify(jsonLdOrganization)}
  />
  <script type="application/ld+json" set:html={JSON.stringify(jsonLdService)} />
  <script type="application/ld+json" set:html={JSON.stringify(jsonLdFAQ)} />

  <!-- Hero Section -->
  <HeroSection locale={locale} />

  <!-- Trust Bar (Clients & Certifications) -->
  <TrustBar locale={locale} />

  <!-- Why Ignia (4 Pillars) -->
  <WhyIgniaGrid locale={locale} />

  <!-- Pricing CTA (Simple panel) -->
  <PricingCTA locale={locale} />

  <!-- Solutions (4 Packaged Solutions) -->
  <SolutionsCards locale={locale} />

  <!-- Products (7 Core Products) -->
  <ProductsGrid locale={locale} />

  <!-- Multi-Cloud Diagram -->
  <MulticloudDiagram locale={locale} />

  <!-- AI & ML Cards -->
  <AICards locale={locale} />

  <!-- Use Cases Tabs (Fintech, Retail, Media) -->
  <UseCasesTabs locale={locale} />

  <!-- SLA Commitments -->
  <SLABlock locale={locale} />

  <!-- Compliance Certifications -->
  <ComplianceBlock locale={locale} />

  <!-- Testimonials Carousel -->
  <TestimonialsCarousel locale={locale} />

  <!-- Final CTA -->
  <FinalCTA locale={locale} />
</BaseLayout>
