---
import BaseLayout from "../layouts/BaseLayout.astro";
import { t } from "astro-i18n";

// Obtener locale usando API nativa de Astro 5.x
// currentLocale retorna el idioma actual del contexto i18n (ej: "en", "es-MX", "fr")
const locale = Astro.currentLocale?.split("-")[0] ?? "en";

// Traducir metadatos para SEO (arquitecture.md §5 - Gestión de Contenido i18n)
const title = t("home.meta.title", undefined, { locale });
const description = t("home.meta.description", undefined, { locale });
---

<BaseLayout title={title} description={description}>
  <section class="mx-auto flex max-w-3xl flex-col gap-6 px-4 py-16 text-center">
    <h1 class="text-4xl font-semibold tracking-tight sm:text-5xl">
      {t("home.hero.heading", undefined, { locale })}
    </h1>
    <p class="text-lg text-gray-600">
      {t("home.hero.subheading", undefined, { locale })}
    </p>
  </section>
</BaseLayout>
