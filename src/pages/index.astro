---
import MarketingLayout from '../layouts/MarketingLayout.astro';
import { t } from 'astro-i18n';

const locale = Astro.locals?.locale ?? 'en';
---

<MarketingLayout
  titleKey="home.meta.title"
  descriptionKey="home.meta.description"
>
  <section class="mx-auto flex max-w-3xl flex-col gap-6 px-4 py-16 text-center">
    <h1 class="text-4xl font-semibold tracking-tight sm:text-5xl">
      {t('home.hero.heading', undefined, { locale })}
    </h1>
    <p class="text-lg text-gray-600">
      {t('home.hero.subheading', undefined, { locale })}
    </p>
  </section>
</MarketingLayout>
