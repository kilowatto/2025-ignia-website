/**
 * Decap CMS Admin Interface
 * 
 * Esta página sirve la interfaz de administración de Decap CMS.
 * Acceso: http://localhost:4321/admin
 * 
 * NOTA: Usa Netlify Identity para autenticación GitHub OAuth
 * Ver: CMS_SETUP_GUIDE.md para instrucciones completas
 */

export const prerender = false;

const html = `<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="robots" content="noindex, nofollow" />
  <title>Ignia Cloud - Content Manager</title>
  
  <!-- Netlify Identity Widget -->
  <script src="https://identity.netlify.com/v1/netlify-identity-widget.js"></script>
</head>
<body>
  <!-- Decap CMS -->
  <script src="https://unpkg.com/decap-cms@^3.0.0/dist/decap-cms.js"></script>
  
  <script>
    // Inicializar Netlify Identity con tu sitio
    if (window.netlifyIdentity) {
      window.netlifyIdentity.init({
        APIUrl: "https://ignia-cloud.netlify.app/.netlify/identity"
      });
    }
  </script>
</body>
</html>`;

return new Response(html, {
  status: 200,
  headers: {
    'Content-Type': 'text/html; charset=utf-8',
    'Cache-Control': 'no-cache, no-store, must-revalidate',
  },
});
