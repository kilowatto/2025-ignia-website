---
/**
 * ProductsGrid Component
 * Displays 7 core products
 * Architecture: Zero JS, 100% Tailwind, WCAG 2.2 AA
 * Section: #6 of Home
 */

import { useTranslations } from "@/utils/i18n";

interface Props {
  locale?: "en" | "es" | "fr";
}

const { locale = "en" } = Astro.props;
const t = await useTranslations(locale);

const getUrl = (path: string) => {
  return locale === "en" ? path : `/${locale}${path}`;
};
---

<section class="py-20 bg-white" aria-labelledby="products-heading">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section Header -->
    <div class="text-center max-w-3xl mx-auto mb-16">
      <h2
        id="products-heading"
        class="text-3xl md:text-4xl font-light text-gray-900 mb-4"
      >
        {t("home.products.title", { locale })}
      </h2>
      <p class="text-lg text-gray-600">
        {t("home.products.subtitle", { locale })}
      </p>
    </div>

    <!-- Products Grid -->
    <div
      class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4"
    >
      <!-- Product 1: VMs -->
      <article
        class="bg-gradient-to-br from-orange-50 to-white p-6 rounded-lg border border-orange-100 hover:shadow-lg transition-shadow duration-300"
      >
        <div class="flex items-center mb-4">
          <svg
            class="h-8 w-8 text-orange-500"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
            aria-hidden="true"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M5 12h14M5 12a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v4a2 2 0 01-2 2M5 12a2 2 0 00-2 2v4a2 2 0 002 2h14a2 2 0 002-2v-4a2 2 0 00-2-2m-2-4h.01M17 16h.01"
            ></path>
          </svg>
          <h3 class="ml-3 text-lg font-semibold text-gray-900">
            {t("home.products.product1_title", { locale })}
          </h3>
        </div>
        <p class="text-sm text-gray-600 mb-4">
          {t("home.products.product1_description", { locale })}
        </p>
        <a
          href={getUrl("/productos/vms")}
          class="text-sm text-orange-500 hover:text-orange-600 font-medium"
        >
          {t("home.products.cta", { locale })} →
        </a>
      </article>

      <!-- Product 2: Kubernetes -->
      <article
        class="bg-gradient-to-br from-blue-50 to-white p-6 rounded-lg border border-blue-100 hover:shadow-lg transition-shadow duration-300"
      >
        <div class="flex items-center mb-4">
          <svg
            class="h-8 w-8 text-blue-500"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
            aria-hidden="true"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"
            ></path>
          </svg>
          <h3 class="ml-3 text-lg font-semibold text-gray-900">
            {t("home.products.product2_title", { locale })}
          </h3>
        </div>
        <p class="text-sm text-gray-600 mb-4">
          {t("home.products.product2_description", { locale })}
        </p>
        <a
          href={getUrl("/productos/kubernetes")}
          class="text-sm text-blue-500 hover:text-blue-600 font-medium"
        >
          {t("home.products.cta", { locale })} →
        </a>
      </article>

      <!-- Product 3: Storage -->
      <article
        class="bg-gradient-to-br from-green-50 to-white p-6 rounded-lg border border-green-100 hover:shadow-lg transition-shadow duration-300"
      >
        <div class="flex items-center mb-4">
          <svg
            class="h-8 w-8 text-green-500"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
            aria-hidden="true"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4m0 5c0 2.21-3.582 4-8 4s-8-1.79-8-4"
            ></path>
          </svg>
          <h3 class="ml-3 text-lg font-semibold text-gray-900">
            {t("home.products.product3_title", { locale })}
