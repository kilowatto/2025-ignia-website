---
/**
 * TrustBar Component - Hybrid Design
 * Combines hero stats with animated client logos carousel
 * Architecture: Zero JS, 100% CSS animations, Tailwind, WCAG 2.2 AA
 * Section: #2 of Home
 *
 * Cumplimiento arquitecture.md:
 * - §2: Sin JS, solo CSS animations
 * - §5: i18n completa con astro-i18n
 * - §7: WCAG 2.2 AA (pausable animations via prefers-reduced-motion)
 * - §10: Imágenes WebP optimizadas (200x80px, <15KB)
 * - §14: Loading lazy para logos below-the-fold
 */

import { t } from "astro-i18n";

interface Props {
  locale?: "en" | "es" | "fr";
}

const { locale = "en" } = Astro.props;

// Client logos - Real clients (10 logos for carousel)
// Formato: 200x80px WebP, grayscale, transparent bg, <15KB cada uno
// TODO: Reemplazar URLs de placehold.co con archivos locales reales
// Ver: /public/images/trust/clients/README.md para especificaciones
const clientLogos = [
  {
    name: "Client 1",
    url: "https://placehold.co/200x80/e5e7eb/6b7280/webp?text=Client+1&font=raleway",
  },
  {
    name: "Client 2",
    url: "https://placehold.co/200x80/e5e7eb/6b7280/webp?text=Client+2&font=raleway",
  },
  {
    name: "Client 3",
    url: "https://placehold.co/200x80/e5e7eb/6b7280/webp?text=Client+3&font=raleway",
  },
  {
    name: "Client 4",
    url: "https://placehold.co/200x80/e5e7eb/6b7280/webp?text=Client+4&font=raleway",
  },
  {
    name: "Client 5",
    url: "https://placehold.co/200x80/e5e7eb/6b7280/webp?text=Client+5&font=raleway",
  },
  {
    name: "Client 6",
    url: "https://placehold.co/200x80/e5e7eb/6b7280/webp?text=Client+6&font=raleway",
  },
  {
    name: "Client 7",
    url: "https://placehold.co/200x80/e5e7eb/6b7280/webp?text=Client+7&font=raleway",
  },
  {
    name: "Client 8",
    url: "https://placehold.co/200x80/e5e7eb/6b7280/webp?text=Client+8&font=raleway",
  },
  {
    name: "Client 9",
    url: "https://placehold.co/200x80/e5e7eb/6b7280/webp?text=Client+9&font=raleway",
  },
  {
    name: "Client 10",
    url: "https://placehold.co/200x80/e5e7eb/6b7280/webp?text=Client+10&font=raleway",
  },
];
---

<section class="py-16 bg-gray-50" aria-labelledby="trustbar-heading">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Main Heading -->
    <h2
      id="trustbar-heading"
      class="text-sm font-semibold text-gray-500 uppercase tracking-wide text-center mb-12"
    >
      {t("home.trustBar.title", undefined, { locale })}
    </h2>

    <!-- Hero Stats Section - 3 Big Numbers -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-16" role="list">
      <!-- Stat 1: Uptime -->
      <div
        class="bg-white rounded-xl shadow-sm p-8 text-center hover:shadow-md transition-shadow duration-200"
        role="listitem"
      >
        <div class="flex justify-center mb-4">
          <svg
            class="w-14 h-14 text-orange-500"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
            aria-hidden="true"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"
            ></path>
          </svg>
        </div>
        <div class="text-5xl lg:text-6xl font-light text-orange-500 mb-3">
          {t("home.trustBar.stat1_number", undefined, { locale })}
        </div>
        <div class="text-base text-gray-900 font-medium mb-1">
          {t("home.trustBar.stat1_label", undefined, { locale })}
        </div>
        <div class="text-sm text-gray-500">
          {t("home.trustBar.stat1_sublabel", undefined, { locale })}
        </div>
      </div>

      <!-- Stat 2: Human Support -->
      <div
        class="bg-white rounded-xl shadow-sm p-8 text-center hover:shadow-md transition-shadow duration-200"
        role="listitem"
      >
        <div class="flex justify-center mb-4">
          <svg
            class="w-14 h-14 text-orange-500"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
            aria-hidden="true"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"
            ></path>
          </svg>
        </div>
        <div class="text-5xl lg:text-6xl font-light text-orange-500 mb-3">
          {t("home.trustBar.stat2_number", undefined, { locale })}
        </div>
        <div class="text-base text-gray-900 font-medium mb-1">
          {t("home.trustBar.stat2_label", undefined, { locale })}
        </div>
        <div class="text-sm text-gray-500">
          {t("home.trustBar.stat2_sublabel", undefined, { locale })}
        </div>
      </div>

      <!-- Stat 3: Response Time -->
      <div
        class="bg-white rounded-xl shadow-sm p-8 text-center hover:shadow-md transition-shadow duration-200"
        role="listitem"
      >
        <div class="flex justify-center mb-4">
          <svg
            class="w-14 h-14 text-orange-500"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
            aria-hidden="true"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>
        <div class="text-5xl lg:text-6xl font-light text-orange-500 mb-3">
          {t("home.trustBar.stat3_number", undefined, { locale })}
        </div>
        <div class="text-base text-gray-900 font-medium mb-1">
          {t("home.trustBar.stat3_label", undefined, { locale })}
        </div>
        <div class="text-sm text-gray-500">
          {t("home.trustBar.stat3_sublabel", undefined, { locale })}
        </div>
      </div>
    </div>

    <!-- Client Logos Carousel Section -->
    <div class="border-t border-gray-200 pt-12">
      <p class="text-center text-gray-600 mb-10 text-sm">
        {t("home.trustBar.clients_subtitle", undefined, { locale })}
      </p>

      <!-- Infinite Carousel Container -->
      <div class="relative overflow-hidden">
        <!-- Gradient overlays for fade effect -->
        <div
          class="absolute left-0 top-0 bottom-0 w-20 bg-gradient-to-r from-gray-50 to-transparent z-10 pointer-events-none"
          aria-hidden="true"
        >
        </div>
        <div
          class="absolute right-0 top-0 bottom-0 w-20 bg-gradient-to-l from-gray-50 to-transparent z-10 pointer-events-none"
          aria-hidden="true"
        >
        </div>

        <!-- Scrolling Track (duplicated for seamless loop) -->
        <div class="logos-track flex items-center gap-12">
          <!-- First set of logos -->
          {
            clientLogos.map((logo) => (
              <div class="flex-shrink-0">
                <img
                  src={logo.url}
                  alt={logo.name}
                  width="200"
                  height="80"
                  loading="lazy"
                  decoding="async"
                  class="h-12 w-auto grayscale opacity-60 hover:grayscale-0 hover:opacity-100 transition-all duration-300"
                />
              </div>
            ))
          }
          <!-- Duplicate set for seamless loop -->
          {
            clientLogos.map((logo) => (
              <div class="flex-shrink-0" aria-hidden="true">
                <img
                  src={logo.url}
                  alt=""
                  width="200"
                  height="80"
                  loading="lazy"
                  decoding="async"
                  class="h-12 w-auto grayscale opacity-60 hover:grayscale-0 hover:opacity-100 transition-all duration-300"
                />
              </div>
            ))
          }
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  /* 
   * Infinite Carousel Animation - Pure CSS
   * Respects prefers-reduced-motion for accessibility (WCAG 2.2 AA)
   * Animation duration: 40s for smooth, slow scroll
   * Duplicated content ensures seamless loop
   */
  @keyframes scroll-logos {
    from {
      transform: translateX(0);
    }
    to {
      transform: translateX(-50%);
    }
  }

  .logos-track {
    animation: scroll-logos 40s linear infinite;
  }

  /* Pause animation on hover (user control) */
  .logos-track:hover {
    animation-play-state: paused;
  }

  /* Respect user's motion preferences (WCAG 2.2 AA) */
  @media (prefers-reduced-motion: reduce) {
    .logos-track {
      animation: none;
    }
  }
</style>
