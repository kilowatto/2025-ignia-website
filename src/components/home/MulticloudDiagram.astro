---
/**
 * MulticloudDiagram Component
 * Displays multi-cloud architecture diagram
 * Architecture: Zero JS, 100% Tailwind, inline SVG
 * Section: #7 of Home
 */

import { t } from "astro-i18n";

interface Props {
  locale?: "en" | "es" | "fr";
}

const { locale = "en" } = Astro.props;
---

<section
  class="py-20 bg-gradient-to-br from-gray-900 to-gray-800 text-white"
  aria-labelledby="multicloud-heading"
>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section Header -->
    <div class="text-center max-w-3xl mx-auto mb-16">
      <h2 id="multicloud-heading" class="text-3xl md:text-4xl font-light mb-4">
        {t("home.multicloud.title", undefined, { locale })}
      </h2>
      <p class="text-lg text-gray-300">
        {t("home.multicloud.subtitle", undefined, { locale })}
      </p>
    </div>

    <!-- Diagram Container -->
    <div class="max-w-5xl mx-auto">
      <div class="bg-gray-800 rounded-lg p-8 border border-gray-700">
        <!-- SVG Diagram -->
        <svg
          viewBox="0 0 800 400"
          class="w-full h-auto"
          role="img"
          aria-label={t("home.multicloud.diagram_alt", undefined, { locale })}
        >
          <title>
            {t("home.multicloud.diagram_alt", undefined, { locale })}
          </title>

          <!-- Central Hub (Ignia Cloud) -->
          <circle cx="400" cy="200" r="60" fill="#f59e0b" opacity="0.2"
          ></circle>
          <circle
            cx="400"
            cy="200"
            r="50"
            fill="#f59e0b"
            stroke="#fbbf24"
            stroke-width="2"></circle>
          <text
            x="400"
            y="195"
            text-anchor="middle"
            fill="white"
            font-size="14"
            font-weight="bold">Ignia</text
          >
          <text x="400" y="210" text-anchor="middle" fill="white" font-size="12"
            >Cloud</text
          >

          <!-- AWS -->
          <rect
            x="100"
            y="80"
            width="120"
            height="80"
            rx="8"
            fill="#1f2937"
            stroke="#ff9900"
            stroke-width="2"></rect>
          <text
            x="160"
            y="115"
            text-anchor="middle"
            fill="#ff9900"
            font-size="16"
            font-weight="bold">AWS</text
          >
          <text
            x="160"
            y="135"
            text-anchor="middle"
            fill="#9ca3af"
            font-size="11">EC2, S3, RDS</text
          >

          <!-- Azure -->
          <rect
            x="580"
            y="80"
            width="120"
            height="80"
            rx="8"
            fill="#1f2937"
            stroke="#0078d4"
            stroke-width="2"></rect>
          <text
            x="640"
            y="115"
            text-anchor="middle"
            fill="#0078d4"
            font-size="16"
            font-weight="bold">Azure</text
          >
          <text
            x="640"
            y="135"
            text-anchor="middle"
            fill="#9ca3af"
            font-size="11">VMs, Blob, SQL</text
          >

          <!-- GCP -->
          <rect
            x="100"
            y="240"
            width="120"
            height="80"
            rx="8"
            fill="#1f2937"
            stroke="#4285f4"
            stroke-width="2"></rect>
          <text
            x="160"
            y="275"
            text-anchor="middle"
            fill="#4285f4"
            font-size="16"
            font-weight="bold">GCP</text
          >
          <text
            x="160"
            y="295"
            text-anchor="middle"
            fill="#9ca3af"
            font-size="11">Compute, GCS</text
          >

          <!-- On-Premise -->
          <rect
            x="580"
            y="240"
            width="120"
            height="80"
            rx="8"
            fill="#1f2937"
            stroke="#10b981"
            stroke-width="2"></rect>
          <text
            x="640"
            y="270"
            text-anchor="middle"
            fill="#10b981"
            font-size="14"
            font-weight="bold">On-Premise</text
          >
          <text
            x="640"
            y="290"
            text-anchor="middle"
            fill="#9ca3af"
            font-size="11">Data Centers</text
          >

          <!-- Connection Lines -->
          <line
            x1="220"
            y1="120"
            x2="350"
            y2="180"
            stroke="#f59e0b"
            stroke-width="2"
            stroke-dasharray="5,5"
            opacity="0.6"></line>
          <line
            x1="580"
            y1="120"
            x2="450"
            y2="180"
            stroke="#f59e0b"
            stroke-width="2"
            stroke-dasharray="5,5"
            opacity="0.6"></line>
          <line
            x1="220"
            y1="280"
            x2="350"
            y2="220"
            stroke="#f59e0b"
            stroke-width="2"
            stroke-dasharray="5,5"
            opacity="0.6"></line>
          <line
            x1="580"
            y1="280"
            x2="450"
            y2="220"
            stroke="#f59e0b"
            stroke-width="2"
            stroke-dasharray="5,5"
            opacity="0.6"></line>
        </svg>
      </div>

      <!-- Features Grid Below Diagram -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mt-12">
        <div class="text-center">
          <div
            class="inline-flex items-center justify-center h-12 w-12 rounded-lg bg-orange-500 text-white mb-4"
          >
            <svg
              class="h-6 w-6"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
              aria-hidden="true"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M13 10V3L4 14h7v7l9-11h-7z"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold mb-2">
            {t("home.multicloud.feature1_title", undefined, { locale })}
          </h3>
          <p class="text-sm text-gray-300">
            {t("home.multicloud.feature1_description", undefined, { locale })}
          </p>
        </div>

        <div class="text-center">
          <div
            class="inline-flex items-center justify-center h-12 w-12 rounded-lg bg-blue-500 text-white mb-4"
          >
            <svg
              class="h-6 w-6"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
              aria-hidden="true"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"
              ></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold mb-2">
            {t("home.multicloud.feature2_title", undefined, { locale })}
          </h3>
          <p class="text-sm text-gray-300">
            {t("home.multicloud.feature2_description", undefined, { locale })}
          </p>
        </div>

        <div class="text-center">
          <div
            class="inline-flex items-center justify-center h-12 w-12 rounded-lg bg-green-500 text-white mb-4"
          >
            <svg
              class="h-6 w-6"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
              aria-hidden="true"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
              ></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold mb-2">
            {t("home.multicloud.feature3_title", undefined, { locale })}
          </h3>
          <p class="text-sm text-gray-300">
            {t("home.multicloud.feature3_description", undefined, { locale })}
          </p>
        </div>
      </div>
    </div>
  </div>
</section>
