---
/**
 * ComplianceBlock Component
 * Displays compliance certifications and standards
 * Architecture: Zero JS, 100% Tailwind, WCAG 2.2 AA
 * Section: #11 of Home
 */

import { useTranslations } from "@/utils/i18n";

interface Props {
  locale?: "en" | "es" | "fr";
}

const { locale = "en" } = Astro.props;
const t = await useTranslations(locale);
---

<section class="py-20 bg-white" aria-labelledby="compliance-heading">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section Header -->
    <div class="text-center max-w-3xl mx-auto mb-16">
      <div
        class="inline-flex items-center justify-center px-4 py-2 bg-blue-100 text-blue-800 rounded-full text-sm font-medium mb-4"
      >
        {t("home.compliance.badge", { locale })}
      </div>
      <h2
        id="compliance-heading"
        class="text-3xl md:text-4xl font-light text-gray-900 mb-4"
      >
        {t("home.compliance.title", { locale })}
      </h2>
      <p class="text-lg text-gray-600">
        {t("home.compliance.subtitle", { locale })}
      </p>
    </div>

    <!-- Compliance Badges Grid -->
    <div class="max-w-5xl mx-auto mb-16">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
        <!-- ISO 27001 -->
        <div class="flex flex-col items-center group">
          <div class="relative">
            <img
              src="https://placehold.co/150x150/1e40af/ffffff/webp?text=ISO+27001&font=raleway"
              alt={t("home.compliance.cert1_alt", { locale })}
              class="h-24 w-24 rounded-lg shadow-md group-hover:shadow-xl transition-shadow duration-300"
              loading="lazy"
              width="150"
              height="150"
            />
            <div class="absolute top-0 right-0 -mt-2 -mr-2">
              <svg
                class="h-6 w-6 text-green-500"
                fill="currentColor"
                viewBox="0 0 20 20"
                aria-hidden="true"
              >
                <path
                  fill-rule="evenodd"
                  d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                  clip-rule="evenodd"></path>
              </svg>
            </div>
          </div>
          <h3 class="mt-4 text-sm font-semibold text-gray-900">ISO 27001</h3>
          <p class="mt-1 text-xs text-gray-500 text-center">
            {t("home.compliance.cert1_label", { locale })}
          </p>
        </div>

        <!-- SOC 2 Type II -->
        <div class="flex flex-col items-center group">
          <div class="relative">
            <img
              src="https://placehold.co/150x150/059669/ffffff/webp?text=SOC+2&font=raleway"
              alt={t("home.compliance.cert2_alt", { locale })}
              class="h-24 w-24 rounded-lg shadow-md group-hover:shadow-xl transition-shadow duration-300"
              loading="lazy"
              width="150"
              height="150"
            />
            <div class="absolute top-0 right-0 -mt-2 -mr-2">
              <svg
                class="h-6 w-6 text-green-500"
                fill="currentColor"
                viewBox="0 0 20 20"
                aria-hidden="true"
              >
                <path
                  fill-rule="evenodd"
                  d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                  clip-rule="evenodd"></path>
              </svg>
            </div>
          </div>
          <h3 class="mt-4 text-sm font-semibold text-gray-900">
            SOC 2 Type II
          </h3>
          <p class="mt-1 text-xs text-gray-500 text-center">
            {t("home.compliance.cert2_label", { locale })}
          </p>
        </div>

        <!-- PCI DSS -->
        <div class="flex flex-col items-center group">
          <div class="relative">
            <img
              src="https://placehold.co/150x150/dc2626/ffffff/webp?text=PCI+DSS&font=raleway"
              alt={t("home.compliance.cert3_alt", { locale })}
              class="h-24 w-24 rounded-lg shadow-md group-hover:shadow-xl transition-shadow duration-300"
              loading="lazy"
              width="150"
              height="150"
            />
            <div class="absolute top-0 right-0 -mt-2 -mr-2">
              <svg
                class="h-6 w-6 text-green-500"
                fill="currentColor"
                viewBox="0 0 20 20"
                aria-hidden="true"
              >
                <path
                  fill-rule="evenodd"
                  d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                  clip-rule="evenodd"></path>
              </svg>
            </div>
          </div>
          <h3 class="mt-4 text-sm font-semibold text-gray-900">PCI DSS</h3>
          <p class="mt-1 text-xs text-gray-500 text-center">
            {t("home.compliance.cert3_label", { locale })}
          </p>
        </div>

        <!-- GDPR -->
        <div class="flex flex-col items-center group">
          <div class="relative">
            <img
              src="https://placehold.co/150x150/7c3aed/ffffff/webp?text=GDPR&font=raleway"
              alt={t("home.compliance.cert4_alt", { locale })}
              class="h-24 w-24 rounded-lg shadow-md group-hover:shadow-xl transition-shadow duration-300"
              loading="lazy"
              width="150"
              height="150"
            />
            <div class="absolute top-0 right-0 -mt-2 -mr-2">
              <svg
                class="h-6 w-6 text-green-500"
                fill="currentColor"
                viewBox="0 0 20 20"
                aria-hidden="true"
              >
                <path
                  fill-rule="evenodd"
                  d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                  clip-rule="evenodd"></path>
              </svg>
            </div>
          </div>
          <h3 class="mt-4 text-sm font-semibold text-gray-900">GDPR</h3>
          <p class="mt-1 text-xs text-gray-500 text-center">
            {t("home.compliance.cert4_label", { locale })}
          </p>
        </div>
      </div>
    </div>

    <!-- Compliance Features -->
    <div class="max-w-5xl mx-auto">
      <div
        class="bg-gradient-to-br from-blue-50 to-purple-50 rounded-lg p-8 md:p-12"
      >
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          <div>
            <h3 class="text-2xl font-semibold text-gray-900 mb-6">
              {t("home.compliance.features_title", { locale })}
            </h3>
            <ul class="space-y-4">
              <li class="flex items-start">
                <svg
                  class="h-6 w-6 text-blue-500 mt-0.5 flex-shrink-0"
                  fill="currentColor"
                  viewBox="0 0 20 20"
                  aria-hidden="true"
                >
                  <path
                    fill-rule="evenodd"
                    d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                    clip-rule="evenodd"></path>
                </svg>
                <span class="ml-3 text-sm text-gray-700">
                  {t("home.compliance.feature1", { locale })}
                </span>
              </li>
              <li class="flex items-start">
                <svg
                  class="h-6 w-6 text-blue-500 mt-0.5 flex-shrink-0"
                  fill="currentColor"
                  viewBox="0 0 20 20"
                  aria-hidden="true"
                >
                  <path
                    fill-rule="evenodd"
                    d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                    clip-rule="evenodd"></path>
                </svg>
                <span class="ml-3 text-sm text-gray-700">
                  {t("home.compliance.feature2", { locale })}
                </span>
              </li>
              <li class="flex items-start">
                <svg
                  class="h-6 w-6 text-blue-500 mt-0.5 flex-shrink-0"
                  fill="currentColor"
                  viewBox="0 0 20 20"
                  aria-hidden="true"
                >
                  <path
                    fill-rule="evenodd"
                    d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                    clip-rule="evenodd"></path>
                </svg>
                <span class="ml-3 text-sm text-gray-700">
                  {t("home.compliance.feature3", { locale })}
                </span>
              </li>
              <li class="flex items-start">
                <svg
                  class="h-6 w-6 text-blue-500 mt-0.5 flex-shrink-0"
                  fill="currentColor"
                  viewBox="0 0 20 20"
                  aria-hidden="true"
                >
                  <path
                    fill-rule="evenodd"
                    d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                    clip-rule="evenodd"></path>
                </svg>
                <span class="ml-3 text-sm text-gray-700">
                  {t("home.compliance.feature4", { locale })}
                </span>
              </li>
            </ul>
          </div>
          <div class="flex items-center justify-center">
            <div class="relative">
              <img
                src="https://placehold.co/400x300/3b82f6/ffffff/webp?text=Security+Architecture&font=raleway"
                alt={t("home.compliance.image_alt", { locale })}
                class="rounded-lg shadow-lg"
                loading="lazy"
                width="400"
                height="300"
              />
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
