---
/**
 * AICards Component
 * Displays AI & ML capabilities
 * Architecture: Zero JS, 100% Tailwind, WCAG 2.2 AA
 * Section: #8 of Home
 */

import { useTranslations } from "@/utils/i18n";

interface Props {
  locale?: "en" | "es" | "fr";
}

const { locale = "en" } = Astro.props;
const t = await useTranslations(locale);

const getUrl = (path: string) => {
  return locale === "en" ? path : `/${locale}${path}`;
};
---

<section
  class="py-20 bg-gradient-to-br from-purple-50 to-blue-50"
  aria-labelledby="ai-heading"
>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section Header -->
    <div class="text-center max-w-3xl mx-auto mb-16">
      <div
        class="inline-flex items-center justify-center px-4 py-2 bg-purple-100 text-purple-800 rounded-full text-sm font-medium mb-4"
      >
        {t("home.ai.badge", { locale })}
      </div>
      <h2
        id="ai-heading"
        class="text-3xl md:text-4xl font-light text-gray-900 mb-4"
      >
        {t("home.ai.title", { locale })}
      </h2>
      <p class="text-lg text-gray-600">
        {t("home.ai.subtitle", { locale })}
      </p>
    </div>

    <!-- 3 AI Cards -->
    <div class="grid grid-cols-1 gap-8 lg:grid-cols-3">
      <!-- Card 1: GPU Instances -->
      <article
        class="bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-2xl transition-shadow duration-300"
