---
export interface Props {
    title: string;
    subtitle: string;
    hero_image: string;
}

const { title, subtitle, hero_image } = Astro.props;
---

<div class="container mx-auto px-4">
    <h1 class="text-4xl font-bold text-center my-8">{title}</h1>
    <p class="text-xl text-center text-gray-600 mb-12">{subtitle}</p>
    <img src={hero_image} alt={title} class="mx-auto mb-8" />
    <div class="prose lg:prose-xl mx-auto">
        <slot />
    </div>
</div>
