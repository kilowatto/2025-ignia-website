---
const locale = Astro.currentLocale || "en";

// src/layouts/Layout.astro
import Header from "../components/Header.astro";
import LanguageDetection from "../components/LanguageDetection.astro";
import "../styles/global.css";
const { title, Content_Description } = Astro.props;

//importaciones de i18n
import enTranslations from "../../public/locales/en/common.json";
import esTranslations from "../../public/locales/es/common.json";
import frTranslations from "../../public/locales/fr/common.json";
const translations = {
  en: enTranslations,
  es: esTranslations,
  fr: frTranslations,
};

// Obtener idioma actual para configurar el lang del HTML
const currentLocale = Astro.currentLocale || "en";
---

<html lang={currentLocale}>
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/x-icon" href="/icons/favicon.ico" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
    <meta name="description" content={Content_Description} />
    <!-- OrganizaciÃ³n -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "Organization",
        "@id": "https://ignia.cloud/#org",
        "name": "Ignia Cloud",
        "url": "https://ignia.cloud/",
        "logo": "https://ignia.cloud/logo.svg",
        "sameAs": [
          "https://www.linkedin.com/company/ignia-cloud/",
          "https://x.com/igniacloud"
        ]
      }
    </script>

    <!-- Sitio -->
    <!-- Sitio -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "WebSite",
        "@id": "https://ignia.cloud/#website",
        "url": "https://ignia.cloud/",
        "name": "Ignia Cloud",
        "publisher": {
          "@id": "https://ignia.cloud/#org"
        }
      }
    </script>
  </head>
  <body>
    <LanguageDetection />
    <Header />

    <main>
      <slot />
    </main>
  </body>
</html>
